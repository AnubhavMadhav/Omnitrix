{
    "swagger": "2.0",
    "info": {
        "description": "A High-Performance Intent-Based Router for LLMs.",
        "title": "Omnitrix AI Gateway",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "API Support",
            "email": "support@omnitrix.io"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/api/v1",
    "paths": {
        "/chat": {
            "post": {
                "description": "Routes the prompt to the correct LLM based on intent and user tier.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "chat"
                ],
                "summary": "Process a User Prompt",
                "parameters": [
                    {
                        "type": "string",
                        "default": "free",
                        "description": "User Tier (free/premium)",
                        "name": "X-User-Tier",
                        "in": "header"
                    },
                    {
                        "description": "User Prompt",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/router.ChatRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/router.ChatResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "router.ChatRequest": {
            "type": "object",
            "required": [
                "prompt"
            ],
            "properties": {
                "prompt": {
                    "description": "'required' returns 400 if missing",
                    "type": "string"
                }
            }
        },
        "router.ChatResponse": {
            "type": "object",
            "properties": {
                "detected_label": {
                    "type": "string",
                    "example": "coding"
                },
                "response": {
                    "type": "string",
                    "example": "def sort(l): return sorted(l)"
                },
                "source": {
                    "type": "string",
                    "example": "llm_generation"
                },
                "target_model": {
                    "type": "string",
                    "example": "DeepSeek-Coder-V2-Lite"
                }
            }
        }
    }
}